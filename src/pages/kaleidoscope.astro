---
import BaseLayout from '../layouts/DefaultLayout.astro'
import HorizontalCard from '../components/HorizontalCard.astro'
import { IMG_ASSETS_BASE_PATH } from "../config.ts";
import { dynamicProperty } from 'solid-js/web';
---

<BaseLayout title="Ideas and Perspectives" description="Ideas and perspectives.">

  <div class="container">
      <div>
        <div class="font-extra-bold mb-5 w-full text-3xl">
          <span class="bg-gradient-to-r from-pink-500 to-violet-500 bg-clip-text text-transparent">
            Kaleidoscope: A Colorful Blend of Ideas and Perspectives
          </span>
        </div>
      </div>

      <div class="w-70% mx-5">

      <HorizontalCard
        title="Taking the long view"
        imgSrc="dna.svg"
        imgSrc={IMG_ASSETS_BASE_PATH + "dna.svg"}
        desc="Taking the long, long view of our history. How did you come to be here, what set of circumstances led to the here and now? Click for my take on this."
        badge="DNA"
        url="/longview"
        target="_self"
      />

      <div class="divider my-0"></div>

      <HorizontalCard
        title="Start at the begining"
        imgSrc={IMG_ASSETS_BASE_PATH + "oak.svg"}
        desc="Start at the begining. My Fossil Oak site a biography and historical record of all the years up to the fish shop."
        url="https://fossiloak.co.uk/lth1.html"
      />

      <div class="divider my-0"></div>

      <HorizontalCard
        title="The meaning of the surname"
        imgSrc={IMG_ASSETS_BASE_PATH + "druid.svg"}
        desc="So where exactly does the surname Noake come from?."
        url="/surname"
        badge="INFO"
      />

      <div class="divider my-0"></div>

      <HorizontalCard
        title="My Maker Credentials"
        imgSrc={IMG_ASSETS_BASE_PATH + "activity.svg"}
        desc="So once I get around to it here I will link to my latest and greatest makes. For now look at my Projets page"
        url="/projects/"
      />
    </div>
  </div>
</BaseLayout>
