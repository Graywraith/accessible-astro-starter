---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/DefaultLayout.astro";
const allPosts = await getCollection("posts");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
const pageTitle = "Tag Index";
---
<BaseLayout pageTitle={pageTitle}>
  <div class="container">
    <div class="grid auto-cols-max grid-cols-2 md:grid-cols-5 gap-3 border-t-indigo-200">
      {
        tags.map((tag) => (
          
            <a href={`/tags/${tag}`} class="">
              <p class="rounded-md bg-slate-800 ring-teal-700 ring-2 py-3
                  w-[100%] text-nowrap text-slate-300 text-center">{tag}
              </p></a>
        ))
      }
    </div>
  </div>
  
</BaseLayout>

<style lang="scss">

  p:hover {
    color: var(--action-color);
  }
</style>