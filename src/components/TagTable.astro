---
import { Image } from 'astro:assets'
import logo from '../../src/assets/img/logo.svg'

interface props {
  title: string
  imageSrc: string
  tags: string[]
}

const { title, tags, inmageSrc = '' } = Astro.props
---

<section class="my-12">
  <a href="/tags/" class="flex items-center gap-2 !no-underline">
    <Image src={logo} alt="Your Logo" width="47" height="37" />
    <div class="text-2xl font-bold text-zinc-400">{title}</div>
  </a>

  <div class="mt-3 grid grid-flow-col auto-cols-max gap-3 border-t-indigo-500">
    {
      tags.map((tag) => (
        <>
          <div class="rounded-md bg-slate-800  mx-auto ring-teal-500 ring-2 py-3 px-4 text-nowrap text-slate-300">
            <span">{tag}</span>
          </div>
        </>
      ))
    }
  </div>
</section>
