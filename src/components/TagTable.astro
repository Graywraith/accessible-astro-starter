---
import { Image } from "astro:assets"
import logo from "../../src/assets/img/logo.svg"

interface props {
  title: string
  imageSrc: string
  tags: string[]
}

const { title, tags, inmageSrc = '' } = Astro.props
---

<section class="my-12">

  <a href="/tags/" class="flex items-center gap-2 !no-underline">
    <Image src={logo} alt="Your Logo" width="47" height="37" />
    <div class="font-bold text-2xl text-zinc-400">{title}</div>
  </a>
 
  <div class="mt-3 flex justify-center border-t-indigo-500">
    {
      tags.map((tag) => (
        <>
          <div class="flex">
            <div class="mr-3 pt-2 px-4 my-auto h-11 w-50 justify-center rounded-md bg-slate-800 px-2 py-1 text-slate-300 ring-2 ring-inset ring-slate-500">
              {tag}
            </div>
          </div>
        </>
      ))
    }
  </div>
</section>
