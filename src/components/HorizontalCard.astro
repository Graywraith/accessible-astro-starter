---
const { title, imgsrc, desc, url, badge, tags, target = '_self' } = Astro.props;
---

<div class="rounded-lg hover:shadow-xl transition ease-in-out hover:scale-[102%] border border-gray-500 p-5 link-card mb-3">
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      <!-- {img && <img src={img} alt={title} class="max-w-full md:max-w-[13rem] rounded-lg" />} -->
      {imgsrc && <img src={imgsrc} alt={title} class="max-w-full  md:max-w-[13rem] h-28 rounded-lg float-right p-3" />}
      <div class="grow w-full">
        <h1 class="text-xl ">
          {title}
          {badge && <div class="text-lg mx-2 bg-gradient-to-r from-emerald-200 to-emerald-900 bg-clip-text text-transparent rounded-md ring-1 ring-slate-500 ring-offset-3 w-fit p-2 mt-2">{badge}</div>}
        </h1>
        <p class="py-1 text-1xl">{desc}</p>
        <div class="card-actions justify-end">
          <!-- {tagsarr && tagsarr.map((tag) => <div class="badge badge-outline">{tag}</div>)} -->
        </div>
      </div>
    </div>
  </a>
</div>

<style>

	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		/* background-size: 400%; */
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: linear-gradient(
      45deg, var(--accent),var(--accent-light) 30%,white 60%);
	}

	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-lght));
	}
</style>

